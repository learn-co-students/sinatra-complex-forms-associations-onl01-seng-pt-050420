<h1>Update Pet</h1>

<h2>Edits for <%= @pet.name %></h2>
 
  <form action="/pets/<%= @pet.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <label>Edit the pet's Name:</label>
    <br>
    <input type="text" name="pet[name]" value="<%= @pet.name %>">
 
    <br>
    <p>Select an existing owner or create a new one below.</p>
 
 
    <h3>Existing owners</h3>
    <% @owners.each do |owner| %>
      <input type="checkbox" name="pet[owner_ids][]" id="<%= owner.id %>" value="<%= owner.id %>" <%='checked' if @owner.owners.include?(pet) %>><%= owner.name %><br>
    <% end %>
    <br>
 
    <h3>New Owner</h3>
    <label>Owner Name: </label>
    <br>
    <input type="text" name="owner[name]" id="owner_name">
    <br><br>
 
    <input type="submit" value="Update Pet">
  </form>
