<h1>Update Pet</h1>
<form method="POST" action="/pets/<%=@pet.id%>">
    <input type="hidden" name="_method" value="patch">
    <label for="pet_name">Pet Name:</label>
    <input type="text" id="pet_name" name="pet[name]" value="<%= @pet.name %>">

    <h2>Select an Owner:</h2>
    <% @owners.each do |owner| %>
        <input type="radio" name="pet[owner_id]" id="<%= owner.id %>" value="<%= owner.id %>" <%= 'checked' if owner.id == @pet.owner.id%>><%= owner.name %></input>
    <% end %>

    <h2>Or Create an Owner:</h2>
        <input type="text" name="owner[name]" id="owner_name"><br>

    <input type="submit" value="Update Pet">
</form>

